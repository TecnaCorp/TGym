
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>T-Gym Cadastro</title>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/style.css">
    <link rel="stylesheet" href="~/Content/flaticon.css">
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.mask.min.js"></script>
    <style type="text/css">
        @@font-face {
            font-family: 'Coves';
            font-style: bold;
            font-weight: normal;
            src: url('../../fonts/Coves Bold.otf');
        }

        @@font-face {
            font-family: 'Linearicons-Free';
            src: url('../../fonts/Linearicons-Free.eot?7y0ygv');
            src: url('../../fonts/Linearicons-Free.eot?#iefix7y0ygv') format('embedded-opentype'), url('../../fonts/Linearicons-Free.woff2?7y0ygv') format('woff2'), url('../../fonts/Linearicons-Free.woff?7y0ygv') format('woff'), url('../../fonts/Linearicons-Free.ttf?7y0ygv') format('truetype'), url('../../fonts/Linearicons-Free.svg?7y0ygv#Linearicons-Free') format('svg');
            font-weight: normal;
            font-style: normal;
        }

        @@font-face {
            font-family: "Flaticon";
            src: url("../../fonts/Flaticon-treino.ttf");
            src: url("../../fonts/Flaticon.eot?#iefix") format("embedded-opentype"), url("../../fonts/Flaticon.woff") format("woff"), url("../../fonts/Flaticon.ttf") format("truetype"), url("../../fonts/Flaticon.svg#Flaticon") format("svg");
            font-weight: normal;
            font-style: normal;
        }
    </style>
</head>
<body>
    <div class="container-fluid" id="main">
        <div class="content-center">
            <div id="carouselCadastro" class="carousel slide carousel-fade" data-interval="0">
                <div class="carousel-inner container-login" id="cadastro-carousel">

                    <div class="carousel-item active">
                        <form id="cadUsuario">
                            <center>
                                <h3>Criar sua conta no T-Gym</h3>
                                <p class="my-0" style="opacity:0.8">Vamos começar, Informe alguns de seus dados pessoais</p></br>
                            </center>
                            <div class="form-row">
                                <div class="col">
                                    <div class="input-field">
                                        <input id="email" class="inp" type="email" required>
                                        <label for="email">E-mail</label>
                                        <div class="invalid-feedback">
                                            Insira um e-mail válido.
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="col mr-5">
                                    <div class="input-field">
                                        <input id="password" class="inp" type="password" aria-describedby="passwordHelpBlock" required>
                                        <label for="password">Senha</label>
                                        <small id="passwordHelpBlock" class="form-text text-muted">
                                            Sua senha deve conter no mínimo 8 caracteres.
                                        </small>
                                        <div class="invalid-feedback">
                                            Digite uma senha.
                                        </div>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="input-field">
                                        <input id="confPassword" class="inp" type="password">
                                        <label for="confPassword">Confirmar Senha</label>
                                        <div class="invalid-feedback" id="feedback-password">
                                            Senha não confere.
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="col">
                                    <div class="input-field">
                                        <input id="nome" class="inp" type="text" required>
                                        <label for="nome">Nome</label>
                                        <div class="invalid-feedback">
                                            Digite o seu nome.
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="col my-3">
                                    <label class="align-middle mb-0 mr-2" for="sexo">Gênero </label>
                                    <div class="btn-group btn-group-toggle" data-toggle="buttons">
                                        <label class="btn btn-outline-light active">
                                            <input type="radio" id="rdbMasc" autocomplete="off" checked> Masculino
                                        </label>
                                        <label class="btn btn-outline-light">
                                            <input type="radio" id="rdbFem" autocomplete="off"> Feminino
                                        </label>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="input-field">
                                        <select class="personalizar-select inp" id="objetivo" aria-describedby="objetivoHelpBlock">
                                            @*<option data-display="teste"></option>*@
                                            <option>Bem-estar</option>
                                            <option>Definição dos músculos</option>
                                            <option>Ganho de músculos</option>
                                            <option>Perda de peso</option>
                                        </select>
                                        <label for="objetivo">Objetivo</label>
                                        <small id="objetivoHelpBlock" class="form-text text-muted">
                                            O objetivo pelo qual você vai utilizar o T-Gym.
                                        </small>
                                        <div class="invalid-feedback">
                                            Escolha um objetivo pelo qual você vai utilizar o T-Gym.
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row mb-3">
                                <p id="pNasc" class="mb-0">Data de nascimento:</p>
                                <div class="invalid-feedback" id="dataNasc">
                                    Data de nascimento inválida.
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col">
                                    <div class="input-field">
                                        <input id="diaNasc" class="inp numb" type="text" maxlength="2" required />
                                        <label for="diaNasc">Dia</label>
                                        <div class="invalid-feedback">
                                            Digite o dia do seu nascimento.
                                        </div>
                                    </div>
                                </div>

                                <div class="col">
                                    <div class="input-field">
                                        <select class="personalizar-select inp" id="mesNasc">
                                            <option>Janeiro</option>
                                            <option>Fevereiro</option>
                                            <option>Março</option>
                                            <option>Abril</option>
                                            <option>Maio</option>
                                            <option>Junho</option>
                                            <option>Julho</option>
                                            <option>Agosto</option>
                                            <option>Setembro</option>
                                            <option>Outubro</option>
                                            <option>Novembro</option>
                                            <option>Dezembro</option>
                                        </select>
                                        <label for="mesNasc">Mês</label>
                                        <div class="invalid-feedback">
                                            Escolha o mês do seu nascimento.
                                        </div>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="input-field">
                                        <input type="text" maxlength="4" class="inp numb" id="anoNasc" required />
                                        <label for="anoNasc">Ano</label>
                                        <div class="invalid-feedback">
                                            Digite o ano do seu nascimento.
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="alert alert-warning mb-2" id="alertInvalid">
                                <center><span class="lnr lnr-warning" style="font-size:1.4em;"></span>&nbsp;&nbsp;<a>Atenção! alguns campos estão com dados incorretos, verifique</a></center>
                            </div>
                            <a class="btn btn-link float-left rounded-circle" id="btn-back" href="@Url.Action("Login")"><span class="align-middle"><i class="lnr lnr-arrow-left"></i></span></a>
                            <button class="btn btn-success float-right" type="submit" id="nextCadastro" @*href="#carouselCadastro" data-slide="next"*@>Continuar</button></br></br>
                        </form>
                    </div>





                    <div class="carousel-item">
                        <div class="row">
                            <div class="col">
                                <center>
                                    <h3>Criar sua conta no T-Gym</h3>
                                    <p class="my-0" style="opacity:0.8">Quase lá!! Agora precisamos de alguns dados para o nosso programa</p></br>
                                </center>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-7">
                                <div class="form-row">
                                    <div class="col-4">
                                        <div class="input-field">
                                            <input type="text" class="inp altura" id="altura" />
                                            <label for="altura">Altura</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="col-4">
                                        <div class="input-field">
                                            <input type="text" class="inp peso" id="peso" />
                                            <label for="peso">Peso</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row mt-3 over-h">
                                    <div class="col">
                                        <div class="input-group">
                                            <div class="input-group-append">
                                                <button class="btn btn-info rounded-left" type="button" id="upImgUsu">Atualizar</button>
                                            </div>
                                            <div class="custom-file">
                                                <input type="file" class="custom-file-input" id="imgUsu" aria-describedby="inputGroupFileAddon04">
                                                <label class="custom-file-label" for="imgusu">Escolher arquivo</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col">
                                <center><img src="~/Images/Usuarios/OLVW2043.jpg" class="img-fluid w-100 rounded-circle"></center>
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col mt-2">
                                <a class="btn btn-link float-left rounded-circle" id="btn-back" href="#carouselCadastro" data-slide="prev"><span class="align-middle"><i class="lnr lnr-arrow-left"></i></span></a>
                                <a class="btn btn-success float-right" href="@Url.Action("Login")">Concluir</a></br></br>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
