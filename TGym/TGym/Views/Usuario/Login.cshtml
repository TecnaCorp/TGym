
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="pt-br" dir="ltr">
<head>
    <title>T-Gym Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/style.css">
    <link rel="stylesheet" href="~/Content/flaticon.css">
    <script src="~/Scripts/jquery.mi.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <style type="text/css">
        @@font-face {
            font-family: 'Coves';
            font-style: bold;
            font-weight: normal;
            src: url('../../fonts/Coves Bold.otf');
        }

        @@font-face {
            font-family: 'Linearicons-Free';
            src: url('../../fonts/Linearicons-Free.eot?7y0ygv');
            src: url('../../fonts/Linearicons-Free.eot?#iefix7y0ygv') format('embedded-opentype'), url('../../fonts/Linearicons-Free.woff2?7y0ygv') format('woff2'), url('../../fonts/Linearicons-Free.woff?7y0ygv') format('woff'), url('../../fonts/Linearicons-Free.ttf?7y0ygv') format('truetype'), url('../../fonts/Linearicons-Free.svg?7y0ygv#Linearicons-Free') format('svg');
            font-weight: normal;
            font-style: normal;
        }

        @@font-face {
            font-family: "Flaticon";
            src: url("../../fonts/Flaticon-treino.ttf");
            src: url("../../fonts/Flaticon.eot?#iefix") format("embedded-opentype"), url("../../fonts/Flaticon.woff") format("woff"), url("../../fonts/Flaticon.ttf") format("truetype"), url("../../fonts/Flaticon.svg#Flaticon") format("svg");
            font-weight: normal;
            font-style: normal;
        }
    </style>
</head>
<body>
    <div class="content-center">
        <div id="carouselCadastro" class="carousel slide" data-interval="0">
            <div class="carousel-inner container-login">
                <div class="carousel-item active">
                    <div class="my-4">
                        <center>
                            <img src="~/Images/Tecna/T-Gym_R.png" class="img-fluid w-50"></br></br>
                            <h2>Login</h2><p>Entre na sua conta T-Gym</p></br>
                        </center>

                        <form id="formLogin">
                            <div class="input-group rounded mb-1">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroupPrepend2" style="background-color:transparent; border:none;"><i class="lnr lnr-users" id="lnr-login"></i></span>
                                </div>
                                <input id="email" type="email" class="form-control text-login" placeholder="E-mail" tabindex="1" required>
                            </div>
                            <div class="input-group rounded">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroupPrepend2" style="background-color:transparent; border:none;"><i class="lnr lnr-lock" id="lnr-login"></i></span>
                                </div>
                                <input id="password" type="password" class="form-control text-login" placeholder="Senha" tabindex="2" required>
                            </div></br>
                            <div class="alert alert-warning fade" style="font-size:14px;" id="alertInvalido" role="alert">
                                *E-mail ou senha incorretos, verifique e tente novamente.
                            </div>
                            <button type="submit" class="btn btn-outline-danger btn-block" id="btnLogin" tabindex="3" @*onclick="window.location.href='@Url.Action("Perfil")';"*@>Login</button></br></br>
                        </form>
                        <a class="link" href="@Url.Action("Cadastro")" tabindex="4">Cadastre-se</a>
                        <a class="link float-right" href="#carouselCadastro" tabindex="5" data-slide="next">Esqueceu sua senha?</a>
                    </div>
                </div>


                <div class="carousel-item">
                    <div class="my-4">
                        <center>
                            <h1>Recuperar Senha</h1>
                            <p class="my-0" style="opacity:0.8">Digite o código para redefinir sua senha</p></br>
                        </center>
                        <center>
                            <div class="col-6 mt-5">
                                <div class="input-field mt-4">
                                    <input type="text" class="inp font-30" id="codSenha" aria-describedby="redfSenha" />
                                    <small id="redfSenha" class="form-text text-muted">
                                        Este código foi enviado para o seu e-mail.
                                    </small>
                                </div>
                            </div>
                        </center>
                    </div>
                    <div class="mt-5rem">
                        <a class="btn btn-link float-left rounded-circle" id="btn-back" href="#carouselCadastro" data-slide="prev"><span class="align-middle"><i class="lnr lnr-arrow-left"></i></span></a>
                        <button class="btn btn-success float-right" type="submit" href="#carouselCadastro" data-slide="next">Continuar</button></br></br>
                    </div>
                </div>

                <div class="carousel-item">
                    <div class="my-4">
                        <center>
                            <h1>Recuperar Senha</h1>
                            <p class="my-0" style="opacity:0.8">Ótimo! Agora digite sua nova senha</p></br>
                        </center>
                        <div class="mt-3 mx-4">
                            <div class="input-field">
                                <input id="password" class="inp font-30" type="password" aria-describedby="passwordHelpBlock">
                                <label id="recpSenha" for="password">Senha</label>
                                <small id="passwordHelpBlock" class="form-text text-muted">
                                    Sua senha deve conter no mínimo 8 caracteres.
                                </small>
                            </div>
                            <div class="input-field">
                                <input id="confPassword" class="inp font-30" type="password">
                                <label id="recpSenha" for="confPassword">Confirmar Senha</label>
                            </div>
                        </div>
                    </div>
                    <div class="mt-5rem">
                        <a class="btn btn-link float-left rounded-circle" id="btn-back" href="#carouselCadastro" data-slide="prev"><span class="align-middle"><i class="lnr lnr-arrow-left"></i></span></a>
                        <button class="btn btn-success float-right" type="submit" href="#carouselCadastro" data-slide="next">Concluir</button></br></br>
                    </div>
                </div>
            </div>
          </div>
        </div>
</body>
</html>
